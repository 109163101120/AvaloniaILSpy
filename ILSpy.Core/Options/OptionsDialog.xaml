<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Classes="DialogWindow"
		CanResize="True"
        WindowStartupLocation="CenterOwner"
        Title="Options" Height="400" Width="500"
        x:Class="ICSharpCode.ILSpy.Options.OptionsDialog">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="1*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Name="tabControl" />
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,8">
			<Button Margin="2,0" Name="okButton">OK</Button>
			<Button Margin="2,0" Name="cancelButton">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>